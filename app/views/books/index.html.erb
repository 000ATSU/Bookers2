<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <tr>
    <% @books.each do |book| %>
      <td>
        <%= link_to book_path(book.id) do %>
          <%= book.title %>
        <% end %>
      </td>
      <td><%= book.body %></td>
    <% end %>
    </tr>
  </tbody>
</table>

<%= form_with model: @book do |f| %>
  <h2>New book</h2>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book' %>
<% end %>