<h1>Books</h1>
<table>
  <thead>
    <tr>
      <th>Title</th>
      <th>Opinion</th>
    </tr>
  </thead>
  <tbody>
    <% @books.each do |book| %>
    <tr>
      <td><%= link_to book.title,book_path %></td>
      <td><%= book.body %></td>
    </tr>
    <% end %>
  </tbody>
</table>

<%= form_with model: @book do |f| %>
  <h2>New book</h2>
  <p>Title</p>
  <%= f.text_field :title %>
  <p>Opinion</p>
  <%= f.text_area :body %></br>
  <%= f.submit 'Create Book' %>
<% end %>